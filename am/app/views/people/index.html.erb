<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1>Users  <small>Listing Users</small></h1>
      <ol class="breadcrumb">
        <li class="active"><i class="fa fa-dashboard"></i> Listing Users </li>
      </ol>
    </div>
  </div>

  <div>
    <div class="row">
      <div class="col-lg-6">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
            <tr>
              <th>Lastname <i class="fa fa-sort"></i></th>
              <th>Firstname</th>
              <th>Email</th>
              <th>Date_of_birth</th>
              <th>Private_phone</th>
              <th>Professional_phone</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @people.each do |person| %>
                <tr>
                  <td><%= person.lastname %></td>
                  <td><%= person.firstname %></td>
                  <td><%= person.email %></td>
                  <td><%= person.dateofbirth %></td>
                  <td><%= person.private_phone %></td>
                  <td><%= person.professional_phone %></td>
                  <td><%= link_to 'Show', person %></td>
                  <td><%= link_to 'Edit', edit_person_path(person) %></td>
                  <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div><!-- /.row -->
  </div>
  <%= link_to 'New Person', new_person_path, class:'btn btn-default' %>
  <br>
</div>